<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.shadybrooksoftware.scuttle"
      android:installLocation="auto" android:versionName="2.0.0" android:versionCode="100">
    <application android:label="@string/app_name" android:icon="@drawable/icon">
        <activity android:name=".ScuttleBookmarkList"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

	    <activity android:name="ScuttlePreferences" android:label="@string/preferences_label"></activity>
	
		<activity android:name=".ScuttleAddBookmark" android:label="@string/addbookmark_label">
			<intent-filter>
				<action android:name="android.intent.action.SEND"/>
				<category android:name="android.intent.category.DEFAULT"/>
				<data android:mimeType="text/plain"/>
			</intent-filter>
		</activity>
	</application>



<uses-permission android:name="android.permission.INTERNET"></uses-permission>
<uses-sdk android:minSdkVersion="5"></uses-sdk>
</manifest> 